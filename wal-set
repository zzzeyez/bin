#!/usr/bin/env bash

sassc --style expanded "${HOME}/scripts/pollen/scss/style.scss" > "${HOME}/scripts/pollen/style.css" &
chunkborder
bash "${HOME}/scripts/pecan/wal-set" &&
ps cax | grep bersicht > /dev/null
if [ $? -eq 0 ]; then
	height="$(awk '/--pecan-chunkwm-bar:/{print $NF}' ${HOME}/scripts/pecan/style.css | tr -d ';')"
	chunkc set custom_bar_offset_top "$height"
	chunkc set custom_bar_enabled 1
	chunkc core::unload tiling.so
	chunkc core::load tiling.so
fi
source "${HOME}/.cache/wal/colors.sh"
bg="$(echo $color0 | tr -d '#' | head -c 1)"
if [[ $bg =~ [a-zA-Z] ]]; then darkmode false; else darkmode true; fi
