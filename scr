#!/usr/bin/env bash
# screenshot script
# Author: Daniel Neemann

dir="$HOME/Pictures/Screenshots/$(date +'%y-%m-%d')"
file="$(date +'%H-%M-%S')"
image="$dir/$file.png"

mkdir -p "$dir" &&
screencapture -i "$image" &&

notify(){
	notify-send -m "âœ” Screenshot $file.png saved" -i "$image"
}

up(){
	upload "$image"
}

case "$1" in
    -n)
		notify
	;;
    -u)
		up
	;;
	-nu|-un)
		notify && up
	;;
esac
